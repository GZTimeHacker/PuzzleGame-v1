
@{
    ViewData["Title"] = "LikesData";
}

<div class="container m-auto text-center p-3" style="width:40%;min-width:30rem;">
    <h2>点赞数量排行榜</h2>
    <hr />
    <h3>正方力量</h3>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">排名</th>
                <th scope="col">Token</th>
                <th scope="col">战力</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 10; i++)
            {
                <tr>
                    <th scope="row">@(1+i)</th>
                    <td>@ViewBag.up[i].Token.Substring(0,6)</td>
                    <td>@ViewBag.up[i].Count</td>
                </tr>
            }
        </tbody>
    </table>
    <h3>反方力量</h3>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">排名</th>
                <th scope="col">Token</th>
                <th scope="col">战力</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 10; i++)
            {
            <tr>
                <th scope="row">@(1+i)</th>
                <td>@ViewBag.down[i].Token.Substring(0, 6)</td>
                <td>@ViewBag.down[i].DCount</td>
            </tr>
            }
        </tbody>
    </table>
</div>